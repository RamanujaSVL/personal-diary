<% include partials/header%>
  <input type="hidden" name="chk" value="">
    <div class="container">
        <!-- Page Title-->
        <h1 class="card-panel red accent-4 white-text center-align">Personal Diary</h1>
        <!-- Tabbed Panes-->
        <div class="row">
            <div class="col s12">
                <ul class="tabs tabs-fixed-width">
                    <li class="tab col s4"><a class="active" href="#acct">Account</a></li>
                    <li data-position="bottom" data-tooltip="Login to access this tab" class="tab col s4 disabled tooltipped" id="writeL"><a href="#write">Write</a></li>
                    <li data-position="bottom" data-tooltip="Login to access this tab" id="viewL" class="tab col s4 disabled tooltipped" ><a href="#view">View</a></li>
                </ul>
            </div>
        </div>

        <!-- Account-->
        <div class="row" id="acct">
          <form method="post" action="/account">
            <h1 class="col s12 center-align">Welcome! Please Enter Your Unique ID to Continue</h1>
            <div class="row center-align" style="margin-left: auto;margin-right: auto; width: 50%;">
                <div class="input-field col s8"><i class="material-icons prefix">fiber_pin</i>
                  <input name="psswd" id="psswd" type="password">
                    <!-- <label for="psswd">Password</label>-->
                </div>
                <div class="input-field col s8">
                  <button class="btn-large waves-effect waves-red" type="submit">Take Me In</button>
                </div>
              </div>
          </form>
        </div>
        <!-- End of ACCOUNT-->
    </div>
<% include partials/footer%>
